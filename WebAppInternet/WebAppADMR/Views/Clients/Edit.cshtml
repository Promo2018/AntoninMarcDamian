@model WebAppInternet.Models.Clients

@{
    ViewBag.Title = "Modifier mon compte";
}

<h2>Modifier mon compte</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)


    <div class="form-group">
        Email
        <div class="col-md-10">
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Nom de compte
        <div class="col-md-10">
            @Html.EditorFor(model => model.Autorisations.userName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Autorisations.userName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Mot de passe
        <div class="col-md-10">
