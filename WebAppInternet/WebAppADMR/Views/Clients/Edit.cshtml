            @Html.ValidationMessageFor(model => model.Autorisations.motPasse, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Civilite
        <div class="col-md-10">
            @Html.EditorFor(model => model.Personnes.civilite, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Personnes.civilite, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Nom
        <div class="col-md-10">
            @Html.EditorFor(model => model.Personnes.nom, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Personnes.nom, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        Prenom
        <div class="col-md-10">
            @Html.EditorFor(model => model.Personnes.prenom, new { htmlAttributes = new { @class = "form-control" } })
